{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "lib": ["ES6"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "skipLibCheck": true,
    "allowJs": true,
    "sourceMap": true,
    "target": "ES6"
  },
  "include": ["src/**/*.ts", "test"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}